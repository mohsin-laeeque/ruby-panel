
    <div class="col-lg-6 mx-auto ">
        <div class="card">
            <div class="card-header"><b>Forgot your password?</b></div>
                   <div class="card-body">
                        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                          <%= render "admins/shared/error_messages", resource: resource %>

                          <div class="field">
                            <%= f.label :email %><br />
                            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control  mt-2 mb-2'  %>
                          </div>

                          <div class="actions">
                            <%= f.submit "Send me reset password instructions", class: 'btn btn-primary mt-2 mb-2' %>
                          </div>
                        <% end %>

                        <%= render "admins/shared/links" %>
                   </div>
            </div>
        </div>
    </div>