


    <div class="col-lg-6 mx-auto ">
        <div class="card">
            <div class="card-header"><b>Admin Sign up</b></div>
                   <div class="card-body">
                        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                          <%= render "admins/shared/error_messages", resource: resource %>

                          <div class="field">
                            <%= f.label :email %><br />
                            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control  mt-2 mb-2' %>
                          </div>

                          <div class="field">
                            <%= f.label :password %>
                            <% if @minimum_password_length %>
                            <em>(<%= @minimum_password_length %> characters minimum)</em>
                            <% end %><br />
                            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control  mt-2 mb-2' %>
                          </div>

                          <div class="field">
                            <%= f.label :password_confirmation %><br />
                            <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: 'form-control  mt-2 mb-2'%>
                          </div>

                          <div class="actions">
                            <%= f.submit "Sign up" , class: 'btn btn-primary mt-2 mb-2' %>
                          </div>
                        <% end %>

                        <%= render "admins/shared/links" %>
                   </div>
            </div>
        </div>
    </div>


