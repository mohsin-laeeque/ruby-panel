<div class="container">
    <div class="card rounded-6 mt-5 mb-5">
        <div class="card-body">
            <h2 class="text-center">Document Record</h2>
        </div>
    </div>
    <% if flash[:notice] %>
         <div class="alert alert-primary" role="alert">
             <%= flash[:notice] %>
         </div>
     <% end %>
    <br/>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @documents.each do |document| %>
        <tr>

            <td><%= document.format_id %></td>
            <td><%= document.first_name %></td>
            <td><%= document.last_name %></td>
            <td><%= document.email %></td>
            <td>
                <%= link_to 'Edit', edit_document_path(document), class: 'btn btn-xs btn-primary' %>
                <%= link_to 'Detail', document_path(document), class: 'btn btn-xs btn-primary' %>
                <%= link_to 'Add Article', article_new_path(document.id)  , class: 'btn btn-xs btn-info' %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
</div>
