<div class="container">
    <div class="card">
        <div class="card-header">
            <h2 class="text-center">Supplier Detail</h2>
        </div>
        <%= flash[:notice] %>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-6"><h4 class="mb-4 mt-4">Personal Information</h4></div>
             </div>
            <div class="row">
                <div class="col-lg-6">
                    <p><b>Company Name:</b> <%= @supplier.company_name %> </p>
                    <p><b>First Name:</b> <%= @supplier.contact_fn %> </p>
                    <p><b>Last Name:</b> <%= @supplier.contact_ln %> </p>
                </div>
                <div class="col-lg-6">
                    <p><b>Email:</b> <%= @supplier.email %> </p>
                    <p><b>Phone:</b> <%= @supplier.phone %> </p>
                    <p><b>fax:</b> <%= @supplier.fax %> </p>
                    <p><b>Link:</b> <%= @supplier.url%> </p>
                </div>
            </div>
              <div class="row">
                <div class="col-lg-6"><h4 class="mb-4 mt-4">Address Detail</h4></div>
             </div>
            <div class="row">
                <div class="col-lg-6">

                    <p><b>Country:</b> <%= @supplier.country %> </p>
                    <p><b>State:</b> <%= @supplier.state %> </p>
                    <p><b>City:</b> <%= @supplier.city %> </p>
                </div>
                <div class="col-lg-6">
                     <p><b>Address 2:</b> <%= @supplier.address2%> </p>
                    <p><b>Address 1:</b> <%= @supplier.address1 %> </p>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <p><b>Pay Method:</b> <%= @supplier.pay_methods %> </p>
                    <p><b>Discount Type:</b> <%= @supplier.discount_type %> </p>
                    <p><b>Types:</b> <%= @supplier.types_goods %> </p>
                </div>
                <div class="col-lg-6">
                     <p><b>Discount Available 2:</b> <%= @supplier.discount_available%> </p>
                    <p><b>Postel Code:</b> <%= @supplier.postal_code %> </p>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <p><b>Note:</b> <%= @supplier.notes %> </p>
                </div>
            </div>

            </div>

            <div class="row">
                <div class="col-lg-12">
                    <%= link_to 'Back', suppliers_path, class: 'btn btn-outline-primary btn-xs' %>
                    <%= link_to 'Delete', supplier_path(@supplier) , method: :delete, data: {
                        confirm: "Are you sure !!!"
                    }, class: 'btn btn-outline-danger btn-xs' %>
                </div>
            </div>
        </div>
    </div>
</div>

